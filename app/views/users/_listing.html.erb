
<div class="indexbox">
    <% @user.classifieds.each do |f| %>

    <div class="center-div" id="index">
    <div class="col-lg-12">
        <% if @user == current_user %>
        
            <div class="pull-right">
                <div class="listingoptions" id="optionssmalldiv">
                    <div class="col-md-3">
                        <p><%= link_to "", editlisting_path(f) , :class => "glyphicon glyphicon-edit"  , :id => "optionssmall"   %></p>
                        <p><%= link_to "",f, :confirm => "Are you sure?" ,:method => :delete , :class => "glyphicon glyphicon-trash" , :id => "optionssmall" %></p>
                        <% if f.sold == true %>
                            <p><%= link_to "", sold_classified_path(f, type: "unsold") ,:class => "glyphicon glyphicon-ok" , :style => "color:#0BFF59"  , :id => "optionssmall", method: :put %> </p>
                        <%else%>
                            <p><%= link_to "", sold_classified_path(f, type: "sold") ,:class => "glyphicon glyphicon-ok" , :style => "color:#262626"  , :id => "optionssmall", method: :put %> </p>
                        <%end%>                       
                        
                    </div>
                </div>
            </div>

        <% end %>
        <%= link_to classified_path(f) , :class => "link" do %>
        <div class="media">

            <div class="mediabox">

                <div class="media-left" href="#">
                   

                    <!-- <img class="media-object" src="..." alt="Generic placeholder image">-->
                  <% if f.photos.first %>
                        <%= image_tag f.photos.first.image.url , :class => "media-object"%>

                        <%end%>
                    

                </div>

                <div class="media-body">
                    <h5 class="media-heading"> <%= f.title %></h5>

                    <div class="price">                                     
                        <h5><%= f.price %></h5>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>


    <%end%>
    <%end%>

</div>




